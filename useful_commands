wget https://pypi.python.org/packages/source/P/PyTAPS/PyTAPS-1.4.tar.gz
tar zxvf PyTAPS-1.4.tar.gz
cd PyTAPS-1.4
python setup.py --iMesh-path=/home/mharb/opt/MOAB_4_9_1 --without-iRel --without-iGeom install --user

